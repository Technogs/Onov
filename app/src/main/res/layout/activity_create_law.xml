<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.politicians.CreateLawActivity">

    <include layout="@layout/action_bar_layout_2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/post"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/drawable_gradient_button_background"
                android:layout_height="36dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLawTitle"
                android:layout_width="match_parent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/create_law"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createPostLayout"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:fontFamily="@font/poppins"
                android:hint="@string/law_title"
                android:padding="15dp"
                android:textColor="@color/navigation_color"
                android:textColorHint="@color/navigation_color" />

            <View
                android:id="@+id/vShadowTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:layout_below="@+id/etPostTitle"
                android:background="@color/edit_text_background" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createPostLayout"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:hint="@string/description"
                android:padding="15dp"
                android:textColor="@color/navigation_color"
                android:textColorHint="@color/navigation_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="80dp"
                android:text="@string/upload_pdf"
                android:id="@+id/btnUploadPdf"
                android:onClick="onClick"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/text_blue"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/drawable_chat_background"
                android:layout_height="36dp" />

            <ImageView
                android:layout_width="20dp"
    android:layout_gravity="end"
                android:onClick="onClick"
                android:id="@+id/ivCancel"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:src="@drawable/black_cross"
                android:layout_height="20dp" />

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>