<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.lpa.CreateAnnouncementActivity">

    <include
        layout="@layout/action_bar_layout_2"
        android:id="@+id/ab" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ab"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        android:text="@string/post"
        android:id="@+id/create_event"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/drawable_gradient_button_background"
        android:layout_height="36dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color"
        android:fontFamily="@font/poppins"
        android:hint="@string/event_title"
        android:padding="15dp" />

    <View
        android:id="@+id/vShadowTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_below="@+id/etEventTitle"
        android:background="@color/edit_text_background" />


    <EditText
        android:layout_width="match_parent"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:focusable="false"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color"
        android:id="@+id/edEventDate"
        android:hint="@string/date"
        android:layout_below="@+id/vShadowTwo"
        android:layout_height="50dp" />

    <View
        android:id="@+id/vShadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_below="@+id/edEventDate"
        android:background="@color/edit_text_background" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPostDescription"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/vShadow"
        android:background="@null"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color"
        android:hint="@string/description"
        android:padding="15dp" />

    <View
        android:id="@+id/vShadowThree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_below="@+id/etPostDescription"
        android:background="@color/edit_text_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_below="@+id/vShadowThree"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/drawable_rectangle"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/file_picture"
                android:id="@+id/upload_photo"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/upload_picture"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_blue"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/video_transparent"
                android:id="@+id/upload_video"
                android:layout_centerHorizontal="true"

                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/upload_video"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>