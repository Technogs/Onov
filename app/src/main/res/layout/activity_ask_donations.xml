<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.common.AskDonationsActivity">

    <include layout="@layout/action_bar_layout_2"
        android:id="@+id/inc"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:text="@string/post"
                android:id="@+id/addDonation"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/green_circle"
                android:layout_height="36dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDonationTitle"
                android:layout_width="match_parent"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createPostLayout"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:onClick="onClick"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/donation_title"
                android:padding="15dp"
                android:textColor="@color/navigation_color"
                android:textColorHint="@color/navigation_color" />

            <View
                android:id="@+id/vShadowTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:layout_below="@+id/etPostTitle"
                android:background="@color/edit_text_background" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createPostLayout"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:id="@+id/dontnDesc"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/description"
                android:padding="15dp"
                android:textColor="@color/navigation_color"
                android:textColorHint="@color/navigation_color" />

            <View
                android:id="@+id/vShadowThree"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:layout_below="@+id/etPostTitle"
                android:background="@color/edit_text_background" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:id="@+id/dntnGoal"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/donation_goal_in"
                android:padding="15dp"
                android:inputType="number"
                android:textColor="@color/navigation_color"
                android:textColorHint="@color/navigation_color" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="10dp"
                android:id="@+id/tagDonor"
                android:gravity="end"
                android:padding="@dimen/_4sdp"
                android:onClick="onClick"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/donation_goal_in"
                android:text="Tag Donor"
                android:textColor="@color/app_color"
                android:textColorHint="@color/navigation_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/drawable_chat_background"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spPetition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:spinnerMode="dropdown" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_down_arrow" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/vShadowThree"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/drawable_rectangle"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/pic_lyt"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:onClick="onClick">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/upload_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/file_picture" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/upload_picture"
                        android:textColor="@color/navigation_color"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:background="@color/text_blue"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:onClick="onClick"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/video_lyt"
                    android:layout_alignParentEnd="true"
                 >
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/progressBar"
                        android:visibility="gone"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/video_transparent"
                        android:id="@+id/upload_video"
                        android:layout_centerHorizontal="true"

                        android:layout_height="wrap_content" />
                    <VideoView
                        android:id="@+id/view_video"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/video_transparent"
                        android:visibility="gone" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/upload_video"
                        android:textColor="@color/navigation_color"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="OR"
                android:visibility="gone"
                android:textColor="@color/text_blue"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/upload_filw"
                android:id="@+id/btnUploadDoc"
                android:onClick="onClick"
                android:visibility="gone"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:textColor="@color/text_blue"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/drawable_chat_background"
                android:layout_height="36dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="end"
                android:onClick="onClick"
                android:id="@+id/ivCancel"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:src="@drawable/black_cross"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/ivFile"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>