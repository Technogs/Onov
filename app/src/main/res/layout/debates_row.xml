<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">
 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     android:elevation="@dimen/_11sdp"
     android:layout_margin="@dimen/_2sdp"
     app:cardCornerRadius="@dimen/_15sdp"
     android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="150dp">
   <TextView
       android:layout_width="150dp"
       android:id="@+id/debateCoverImage"
       android:padding="@dimen/_15sdp"
       android:text="@string/share"
       android:layout_gravity="center"
       android:gravity="center"
       android:visibility="visible"
       android:background="@color/virtual_image_top"
       android:textSize="@dimen/_18ssp"
       android:textStyle="bold"
       android:drawablePadding="@dimen/_5sdp"
       android:textColor="@color/app_color"
      android:drawableTop="@drawable/onov_logo"
       android:layout_height="150dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
android:id="@+id/debateLyt"
        android:layout_height="match_parent">

     <TextView
         android:id="@+id/datePolitician"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="15dp"
         android:layout_marginTop="10dp"
         android:fontFamily="@font/poppins_regular"
         android:text="Topic"
         android:visibility="gone"
         android:textColor="@color/black"
         android:textSize="@dimen/_11ssp" />

     <TextView
         android:id="@+id/debateTopic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_marginStart="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginEnd="15dp"
         android:layout_toEndOf="@+id/statusPolitician"
         android:fontFamily="@font/poppins_regular"
         android:text="topic"
         android:visibility="gone"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
<!--     <TextView-->
<!--         android:id="@+id/titlePolitician"-->
<!--         android:layout_width="wrap_content"-->
<!--         android:layout_height="wrap_content"-->
<!--         android:layout_marginStart="15dp"-->
<!--         android:fontFamily="@font/poppins_regular"-->
<!--         android:text="@string/title"-->
<!--         android:textColor="@color/navigation_color"-->
<!--         android:textSize="16sp" />-->

<!--     <TextView-->
<!--         android:id="@+id/titlePoliticianValue"-->
<!--         android:layout_width="wrap_content"-->
<!--         android:layout_height="wrap_content"-->
<!--         android:layout_alignParentEnd="true"-->
<!--         android:layout_marginStart="10dp"-->
<!--         android:layout_marginEnd="15dp"-->
<!--         android:layout_toEndOf="@+id/statusPolitician"-->
<!--         android:fontFamily="@font/poppins_regular"-->
<!--         android:text="Debate on current affairs"-->
<!--         android:textColor="@color/navigation_color"-->
<!--         android:textSize="16sp" />-->


     <TextView
         android:id="@+id/timePolitician"
         android:layout_width="@dimen/_60sdp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/datePolitician"
         android:layout_marginStart="15dp"
         android:layout_marginTop="@dimen/_5sdp"
         android:fontFamily="@font/poppins_regular"
         android:text="@string/title_"
         android:textColor="@color/black"
         android:textSize="@dimen/_11ssp" />

     <TextView
         android:id="@+id/debateTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/datePolitician"
         android:layout_alignParentEnd="true"
         android:layout_marginStart="@dimen/_9sdp"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_marginEnd="@dimen/_12sdp"
         android:layout_toEndOf="@+id/timePolitician"
         android:fontFamily="@font/poppins_regular"

         android:text="@string/title"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />

     <TextView
         android:id="@+id/statusPolitician"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/debateTitle"
         android:layout_marginStart="15dp"
         android:layout_marginTop="@dimen/_4sdp"
         android:fontFamily="@font/poppins_regular"
         android:text="@string/description_"
         android:textColor="@color/black"
         android:textSize="@dimen/_11ssp" />

     <TextView
         android:id="@+id/debateDesc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/debateTitle"
         android:layout_alignParentEnd="true"
         android:layout_marginStart="@dimen/_9sdp"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_marginEnd="@dimen/_12sdp"
         android:layout_toEndOf="@+id/timePolitician"
         android:ellipsize="end"
         android:fontFamily="@font/poppins_regular"
         android:hint="@string/description"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />

     <TextView
         android:id="@+id/statusPoliticianValue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/statusPolitician"
         android:layout_marginStart="@dimen/_10sdp"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_marginEnd="@dimen/_15sdp"
         android:fontFamily="@font/poppins_regular"
         android:text=" Requested"
         android:visibility="gone"
         android:textColor="@color/black"
         android:textSize="@dimen/_10ssp" />

     <TextView
         android:id="@+id/debateReq"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/debateDesc"
         android:layout_alignParentEnd="true"
         android:layout_marginStart="@dimen/_9sdp"
         android:layout_marginTop="@dimen/_4sdp"
         android:visibility="gone"
         android:layout_marginEnd="@dimen/_12sdp"
         android:layout_toEndOf="@+id/timePolitician"
         android:fontFamily="@font/poppins_regular"
         android:hint=" Requested"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />

</RelativeLayout>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_below="@id/statusPolitician"
       android:background="@color/gray_lightest" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_height="match_parent">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/poppins_regular"
         android:text="Vote  "
         android:gravity="end"
         android:layout_weight="1"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/poppins_regular"
         android:text="10"
         android:id="@+id/debateVotes"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/poppins_regular"
         android:text="Views  "
         android:gravity="end"
         android:layout_weight="1"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/poppins_regular"
         android:text="11"
         android:id="@+id/debateViews"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
         android:text="Date  "
         android:gravity="end"

         android:layout_weight="1"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/poppins_regular"
         android:text="3/3/2021"
         android:paddingEnd="@dimen/_20sdp"
         android:id="@+id/debateDate"
         android:textColor="@color/navigation_color"
         android:textSize="@dimen/_11ssp" />

    </LinearLayout>
  </LinearLayout>
 </androidx.cardview.widget.CardView>
</LinearLayout>