<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/drawable_white_curved_border_layout">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/add_your_donation_amount"
        android:textColor="@color/text_blue"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edDonationPrice"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv"
        android:background="@drawable/drawable_chat_background"
        android:elevation="2dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        android:paddingEnd="15dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/edDonationPrice"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/submitDonation"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/drawable_chat_background"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@color/text_blue"
            android:text="@string/submit" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/cancelDonation"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@color/text_blue"
            android:background="@drawable/drawable_chat_background"
            android:text="@string/cancel" />


    </LinearLayout>


</RelativeLayout>