<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.common.SearchFriendsActivity">


    <include layout="@layout/action_bar_layout"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"

    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/searchKey"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:hint="Search here"
        android:layout_toStartOf="@+id/btnSearch"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_search"
        android:background="@drawable/drawable_chat_background"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/search"
        android:id="@+id/btnSearch"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_blue"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/drawable_blue_curve"
        android:layout_centerVertical="true"/>



</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/rv_search_friends"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rv_search_friends"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>