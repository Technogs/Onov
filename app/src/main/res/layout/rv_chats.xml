<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/drawable_chat_background"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChatProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/dummy_profile_image" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="-24dp"
            android:layout_toEndOf="@+id/ivChatProfile"
            android:background="@drawable/drawable_green_circle" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_toEndOf="@+id/ivChatProfile"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="Gulf Doe"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/tvChatDate"
            android:id="@+id/chatUserName"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_toEndOf="@+id/ivChatProfile"
            android:layout_marginStart="10dp"
            android:text="Hi,How are you?"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/chatUserName"
            android:textColor="@color/navigation_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:id="@+id/tvChatDate"
            android:textColor="@color/navigation_color"
            android:text="5 Jan, 3:45pm"/>


    </RelativeLayout>


</LinearLayout>