<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFollowProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/dummy_profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_toEndOf="@+id/ivFollowProfile"
        android:layout_centerVertical="true"
        android:text="Gulf Doe"
        android:textSize="14sp"
        android:layout_marginEnd="5dp"
        android:id="@+id/followUsername"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/message"
        android:id="@+id/btnText"
        android:layout_marginEnd="10dp"
        android:textAllCaps="false"
        android:textColor="@color/navigation_color"
        android:background="@drawable/drawable_chat_background"

        />
</RelativeLayout>