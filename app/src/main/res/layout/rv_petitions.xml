<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">

<!--    android:background="@drawable/drawable_chat_background"-->

    <TextView
        android:layout_width="wrap_content"
        android:text="Sent From:"
        android:id="@+id/tv"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="ABC"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/tv3"
        android:layout_marginStart="40dp"
        android:id="@+id/senderName"
        android:textColor="@color/text_blue"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/title"
        android:id="@+id/tv2"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/senderName"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/petition_1"
        android:layout_toEndOf="@+id/tv3"
        android:id="@+id/petitionTitle"
        android:layout_below="@+id/senderName"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:textColor="@color/text_blue"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="@string/total_signatures"
        android:id="@+id/tv3"
        android:textSize="15sp"
        android:layout_below="@id/petitionTitle"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="10"
        android:textSize="15sp"
        android:id="@+id/signatureCount"
        android:layout_toEndOf="@+id/tv3"
        android:layout_below="@+id/petitionTitle"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_blue"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="@string/tap_to_view_details"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/petitionTitle"
        android:layout_marginStart="20dp"
        android:textColor="@color/grey"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>