<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.GovtDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:src="@drawable/dummy_image"
                android:id="@+id/user_img"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="@dimen/_90sdp"/>
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:id="@+id/name_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="Name: "
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name_txt"
                android:text="name" />

            <TextView
                android:id="@+id/party_txt"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="Party: " />

            <TextView
                android:id="@+id/party_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_txt"
                android:layout_toRightOf="@+id/party_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/party_txt"
                android:id="@+id/dob_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="DOB: "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dob_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/party_txt"
                android:layout_toRightOf="@+id/dob_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/dob_txt"
                android:id="@+id/gender_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="Gender: "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob_txt"
                android:layout_toRightOf="@+id/gender_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/gender_txt"
                android:id="@+id/govtrack_id_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="Govtrack Id: "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/govt_track_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_txt"
                android:layout_toRightOf="@+id/govtrack_id_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/govtrack_id_txt"
                android:id="@+id/state_txt"
                android:layout_toRightOf="@+id/user_img"
                android:text="State: "
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/state_name"
                android:layout_below="@+id/govtrack_id_txt"
                android:layout_toRightOf="@+id/state_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/user_img"
                android:id="@+id/office_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Office: "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/office_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_img"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/office_txt"
                android:text="name" />

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/office_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="title: " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/office_txt"
                android:layout_toRightOf="@+id/title_txt"
                android:text="name"
                android:id="@+id/title_vl"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/title_txt"
                android:id="@+id/phone_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="phone: "
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_txt"
                android:id="@+id/phone_no"
                android:layout_toRightOf="@+id/phone_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/phone_txt"
                android:id="@+id/fax_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Fax: "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fax_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_txt"
                android:layout_toRightOf="@+id/fax_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/fax_txt"
                android:id="@+id/twitter_account_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Twitter Account: "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/fax_txt"
                android:layout_toRightOf="@+id/twitter_account_txt"
                android:text="name"
                android:id="@+id/teitter_ac"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/twitter_account_txt"
                android:id="@+id/facebook_account_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Facebook Account: "
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fb_ac"
                android:layout_below="@+id/twitter_account_txt"
                android:layout_toRightOf="@+id/facebook_account_txt"
                android:text="name" />
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_below="@+id/facebook_account_txt"
                android:id="@+id/youtube_account_txt"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Youtube Account: "
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/youtube_ac"
                android:layout_below="@+id/facebook_account_txt"
                android:layout_toRightOf="@+id/youtube_account_txt"
                android:text="name" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>