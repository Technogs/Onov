<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/titlePolitician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="15dp"
        android:text="@string/title"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/titlePoliticianValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/statusPolitician"
        android:fontFamily="@font/poppins"
        android:text="Debate on current affairs"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/datePolitician"
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePolitician"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="@string/date_"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/datePoliticianValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePolitician"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/statusPolitician"
        android:fontFamily="@font/poppins"
        android:text="30-02-2021"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timePolitician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePolitician"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="15dp"
        android:text="@string/time_"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timePoliticianValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePolitician"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/statusPolitician"
        android:fontFamily="@font/poppins"
        android:text="10:AM - 11:Am"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/statusPolitician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePolitician"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins"
        android:text="@string/status_"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/statusPoliticianValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePolitician"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/statusPolitician"
        android:fontFamily="@font/poppins"
        android:text="Requested"
        android:textColor="@color/navigation_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/edit_text_background"
        android:layout_below="@id/statusPolitician"
        />

</RelativeLayout>