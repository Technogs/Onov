<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.SignPetitionActivity">

    <include
        android:id="@+id/ab"
        layout="@layout/action_bar_layout" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/sign_petition"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
android:layout_alignParentEnd="true"
        android:id="@+id/ivClear"
        android:layout_below="@+id/tv"
        android:src="@drawable/ic_baseline_clear"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="2dp"
        android:layout_below="@+id/ivClear"
        android:background="@drawable/drawable_chat_background"
        android:layout_height="wrap_content">


        <com.kyanogen.signatureview.SignatureView
            xmlns:sign="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signature_view"

            android:layout_width="match_parent"
            android:layout_height="250dp"
            sign:penSize="5dp"
            sign:penColor="#000000"
            sign:enableSignature="true"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignPetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:textAllCaps="false"
        android:layout_marginEnd="30dp"
        android:onClick="onClick"
        android:layout_marginBottom="20dp"
        android:background="@drawable/drawable_gradient_button_background"
        android:text="@string/submit_signature"
        android:textColor="@color/white" />

</RelativeLayout>