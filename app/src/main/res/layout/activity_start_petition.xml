<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.common.StartPetition">

    <include
        android:id="@+id/ab"
        layout="@layout/action_bar_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/progressBarLayout"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/petition"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_pt"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/orange_circle"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/post"
        android:textAllCaps="false"
        android:onClick="onClick"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/petition_title"
        android:padding="15dp"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etPostDescription"
        android:alpha="0.4"
        android:background="@color/edit_text_background" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"

        android:padding="5dp"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTransactionAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/sent_from"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPtDescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:fontFamily="@font/poppins_regular"
        android:gravity="start"
        android:hint="@string/description"
        android:padding="15dp"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color" />

    <View
        android:id="@+id/vShadowThree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etPostDescription"
        android:alpha="0.4"
        android:background="@color/edit_text_background" />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPostLayout"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:id="@+id/pteWbLink"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/website_link"
        android:padding="15dp"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etPostDescription"
        android:alpha="0.4"
        android:background="@color/edit_text_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/petitionDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drawable_chat_background"
            android:gravity="center"
            android:hint="@string/petition_duration"
            android:inputType="number"
            android:onClick="onClick"
            android:paddingStart="15dp"
            android:paddingTop="8dp"
            android:paddingEnd="15dp"
            android:paddingBottom="8dp"
            android:textColor="@color/navigation_color"
            android:textColorHint="@color/navigation_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/petitionDuration"
            android:text="@string/max_12_months" />
    </RelativeLayout>

    <EditText
        android:id="@+id/petitionSignatureCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/drawable_chat_background"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="@string/petition_signature_count"
        android:onClick="onClick"
        android:paddingStart="15dp"
        android:inputType="number"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color" />
            <EditText
        android:id="@+id/pLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/drawable_chat_background"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Confirm Location"
        android:onClick="onClick"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:textColor="@color/navigation_color"
        android:textColorHint="@color/navigation_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/drawable_chat_background"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spPetition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:spinnerMode="dropdown" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_down_arrow" />
            </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
android:layout_marginBottom="20dp"
        android:layout_below="@+id/vShadowThree"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/drawable_rectangle"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/petition_pic"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/file_picture"
                android:id="@+id/upload_photo"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/upload_picture"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:background="@color/text_blue"

            />

        <RelativeLayout
            android:id="@+id/petition_video"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:onClick="onClick">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/upload_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/video_transparent" />
            <VideoView
                android:id="@+id/view_video"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/video_transparent"
                android:visibility="gone" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/upload_video"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>