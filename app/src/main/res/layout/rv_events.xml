<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/drawable_chat_background"
    android:elevation="10dp"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColor="@color/black"
        />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dummy_event" />




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_like" />


            <TextView
                android:id="@+id/tvEventLikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon1"
                android:fontFamily="@font/poppins"
                android:text="@string/like"
                android:textColor="@color/app_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvEventLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon1"

                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/tvEventLikeText"
                android:fontFamily="@font/poppins_medium"
                android:text="20"
                android:textColor="@color/red"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dislike" />


            <TextView
                android:id="@+id/tvEventDislikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon3"
                android:fontFamily="@font/poppins"
                android:text="@string/dislike"
                android:textColor="@color/app_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvEventDisLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon3"

                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/tvEventDislikeText"
                android:fontFamily="@font/poppins_medium"
                android:text="20"
                android:textColor="@color/red"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_comment" />


            <TextView
                android:id="@+id/tvEventCommentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon2"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins"
                android:text="@string/comment"
                android:textColor="@color/app_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvEventCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon2"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/tvEventCommentText"
                android:fontFamily="@font/poppins_medium"
                android:text="20"
                android:textColor="@color/red"
                android:textSize="10sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>