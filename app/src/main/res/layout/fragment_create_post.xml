<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreatePostFragment">


    <RelativeLayout
        android:id="@+id/createPostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPostScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/create_post"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_post"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/drawable_gradient_button_background"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingHorizontal="@dimen/_7sdp"
            android:text="@string/post"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/createPostLayout"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/what_s_on_your_mind"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/text_blue" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/rv_predefined_texts"
        android:layout_below="@+id/etPostTitle"
        tools:listitem="@layout/rv_predefined_texts"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <View
        android:id="@+id/vShadowTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rv_predefined_texts"
        android:background="@color/edit_text_background" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPostDscptn"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/vShadowTwo"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:hint="@string/description"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"

                android:paddingBottom="10dp"
                android:textColor="@color/text_blue" />

    <View
        android:id="@+id/vShadowThree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.4"
        android:layout_below="@+id/etPostDscptn"
        android:background="@color/edit_text_background" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"

        android:layout_below="@+id/vShadowThree"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_rectangle"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:id="@+id/add_photo"
            android:onClick="onClick">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/file_picture" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/upload_picture"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_blue"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:layout_alignParentEnd="true"
            android:onClick="onClick"
            android:id="@+id/add_video"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:src="@drawable/video_transparent"
                android:id="@+id/upload_video"
                android:layout_centerHorizontal="true"

                android:layout_height="wrap_content" />

            <VideoView
                android:id="@+id/view_video"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
android:visibility="gone"
                android:src="@drawable/video_transparent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/upload_video"
                android:textColor="@color/navigation_color"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>