<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.EventPaymentActivity">

    <TextView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:onClick="backBtnPressed"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textColor="@color/text_blue"
        app:drawableTopCompat="@drawable/black_cross" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeBtn"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/payment_successful"
            app:lottie_speed="1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/peopleGoingBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/drawable_chat_background"
            android:fontFamily="@font/poppins_regular"
            android:onClick="onClick"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/view_people_going"
            android:textAllCaps="false"
            android:textColor="@color/text_blue" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_chat_background"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Show other users that you are going?"
            android:textColor="@color/text_blue" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchGoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tv" />


    </RelativeLayout>

</RelativeLayout>