<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.common.ProfileActivity2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:background="@drawable/profile_background">

        <ImageView
            android:id="@+id/ivCoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/white" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/onov_logo_2"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_bold"
            android:onClick="onClick"
            android:paddingHorizontal="10dp"
            android:paddingVertical="@dimen/_1sdp"
            android:text=""
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/drawable_light_grey_curve"
            android:fontFamily="@font/poppins_bold"
            android:onClick="onClick"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="Edit"
            android:visibility="gone"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Save"
            android:visibility="gone"

            android:onClick="onClick"
            android:id="@+id/button_save"
            android:background="@drawable/drawable_light_grey_curve"
            android:textColor="@color/black"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/saveProfile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:layout_alignParentEnd="true"
            android:onClick="onClick"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="10dp"
            android:visibility="gone"
            android:paddingEnd="15dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saveProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/update_profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/photoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/drawable_white_curved_border_layout"
        android:elevation="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:src="@drawable/dummy_profile_image" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@+id/profileImage"
            android:orientation="vertical"
            android:onClick="onClick"
            android:layout_marginTop="50dp"
            android:id="@+id/sll"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/supportClick"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_sopports"
                app:tint="@color/app_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="Support"
                android:id="@+id/sprtText"
                android:layout_gravity="center"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_7ssp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/profileClick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/profileImage"
            android:elevation="3dp"
            android:visibility="gone"
            android:src="@drawable/profile_camera" />

        <TextView
            android:id="@+id/partyFollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/profileImage"
            android:layout_toRightOf="@+id/profileName"
            android:fontFamily="@font/poppins_bold"
            android:text="(R)"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="UN"
            android:gravity="center"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_9ssp" />


        <EditText
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Jenifer"
            android:textColor="@color/text_blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginEnd="15dp"
            android:onClick="onClick"
            android:src="@drawable/edit" />

        <TextView
            android:id="@+id/aboutInfo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/adress"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_11sdp"
            android:drawableRight="@drawable/edit"
            android:drawablePadding="@dimen/_7sdp"
            android:fontFamily="@font/poppins_regular"
            android:onClick="onClick"
            android:paddingHorizontal="@dimen/_11ssp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="@string/about_info_details"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aboutInfo"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_sopports"
                android:visibility="gone"
                app:tint="@color/app_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="N:"
                android:id="@+id/nationalRank"
                android:layout_gravity="center"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_9ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/stateRank"
                android:text="S:"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_9ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_centerInParent="true"
                android:id="@+id/localRank"
                android:fontFamily="@font/poppins_bold"
                android:text="L:"
                android:layout_gravity="center"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>



        <!--            <EditText-->
<!--                android:id="@+id/etText"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:padding="10dp"-->
<!--                android:background="@drawable/drawable_chat_background"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_below="@+id/profileName"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:focusable="false"-->
<!--                android:lines="3" />-->

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/photoLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_chat_background"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="0 Citizens"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_following"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/drawable_chat_background"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="0 Support"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_donors"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_chat_background"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="@string/_02_donors"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDonatedTo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_chat_background"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="0 Donated"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_feeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/noDebateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/no_debates_yet"
            android:textColor="@color/text_blue"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>

    </RelativeLayout>

    </ScrollView>
</RelativeLayout>