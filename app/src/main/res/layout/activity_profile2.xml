<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.common.ProfileActivity2">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/profile_background">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivCoverPhoto"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:background="@color/transparent_black" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/white" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/onov_logo_2"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Edit"
            android:id="@+id/button_edit"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:background="@drawable/drawable_light_grey_curve"
            android:paddingHorizontal="10dp"
            android:onClick="onClick"
            android:paddingVertical="3dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Save"
            android:visibility="gone"

            android:onClick="onClick"
            android:id="@+id/button_save"
            android:background="@drawable/drawable_light_grey_curve"
            android:textColor="@color/black"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/saveProfile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:layout_alignParentEnd="true"
            android:onClick="onClick"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="10dp"
            android:visibility="gone"
            android:paddingEnd="15dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saveProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/update_profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/photoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/drawable_white_curved_border_layout"
        android:elevation="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:src="@drawable/dummy_profile_image" />

        <ImageView
            android:id="@+id/profileClick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="-20dp"
            android:layout_toEndOf="@+id/profileImage"
            android:elevation="3dp"

            android:src="@drawable/profile_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/red"
            android:text="(R)"
            android:id="@+id/partyFollower"
            android:layout_below="@+id/profileImage"
            android:layout_toEndOf="@+id/profileName"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImage"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Jenifer"
            android:textColor="@color/text_blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd= "15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:onClick="onClick"
            android:src="@drawable/edit" />

        <TextView
            android:id="@+id/aboutInfo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/profileName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:onClick="onClick"
            android:text="@string/about_info_details"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <!--            <EditText-->
<!--                android:id="@+id/etText"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:padding="10dp"-->
<!--                android:background="@drawable/drawable_chat_background"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_below="@+id/profileName"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:focusable="false"-->
<!--                android:lines="3" />-->

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/drawable_chat_background"
            android:onClick="onClick"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="20 Citizens"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_following"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/drawable_chat_background"
            android:onClick="onClick"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="10 Support"
            android:textAllCaps="false"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_donors"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/drawable_chat_background"
            android:onClick="onClick"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/_02_donors"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_feeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/noDebateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/no_debates_yet"
            android:textColor="@color/text_blue"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>